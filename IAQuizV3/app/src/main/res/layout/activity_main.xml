<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.diana.iaquizv3.MainActivity">

        <ImageView
            android:id="@+id/imgtext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/orangeline"
            android:layout_centerHorizontal="true"
            android:paddingLeft="70dp"
            android:paddingRight="60dp"
            app:srcCompat="@drawable/text1" />

        <ImageView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/basicbtn"
            android:layout_centerHorizontal="true"
            android:paddingLeft="70dp"
            android:paddingRight="120dp"
            android:paddingBottom="30dp"
            app:srcCompat="@drawable/text2" />

        <ImageView
            android:id="@+id/basicbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="start"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            app:srcCompat="@drawable/btnbasic"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/advancedbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_above="@+id/basicbtn"
            android:layout_centerHorizontal="true"
            android:onClick="start"
            app:srcCompat="@drawable/btnbasic"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/orangeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingBottom="160dp"
            android:layout_above="@+id/advancedbtn"
            android:layout_centerHorizontal="true"
            android:onClick="salir"
            android:paddingLeft="70dp"
            app:srcCompat="@drawable/orangeline"
            tools:ignore="SpeakableTextPresentCheck" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>