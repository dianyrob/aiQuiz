<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.diana.iaquizv3.MainActivity">

        <ImageView
            android:id="@+id/testbtn"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_below="@+id/startbtn"
            android:layout_centerHorizontal="true"
            android:onClick="start"
            app:srcCompat="@drawable/testbtn"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/startbtn"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_below="@+id/imgIA"
            android:layout_centerHorizontal="true"
            android:onClick="start"
            app:srcCompat="@drawable/basicbtn"
            tools:ignore="SpeakableTextPresentCheck" />


        <ImageView
            android:id="@+id/imgIA"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/imgMain"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ia_img" />

        <ImageView
            android:id="@+id/imgSalir"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="salir"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            app:srcCompat="@drawable/salida"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/imgMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/iatext" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>