<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModulosActivity"
    android:background="@drawable/fondo2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/temasfondolinea"
            android:paddingBottom="20dp"
            android:paddingTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/contenidofondolinea" />

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="70dp">


            <ImageView
                android:id="@+id/topicsimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:srcCompat="@drawable/topicslabel" />

            <TextView
                android:id="@+id/topics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="TOPICS"
                android:textAlignment="center"
                android:textColor="#0B0A0A"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/backbtn"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="false"
                app:srcCompat="@drawable/back" />

        </RelativeLayout>


        <ScrollView
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="700dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/L1"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp"
                                    app:srcCompat="@drawable/temasfondolinea" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/Topic1"
                                        android:layout_width="290dp"
                                        android:paddingTop="45dp"
                                        android:paddingLeft="40dp"
                                        android:layout_height="wrap_content"
                                        android:onClick="salir"
                                        app:srcCompat="@drawable/tema1text" /> />

                                    <ImageView
                                        android:id="@+id/test1"
                                        android:layout_width="100dp"
                                        android:layout_height="140dp"
                                        android:onClick="salir"
                                        android:paddingTop="70dp"
                                        app:srcCompat="@drawable/evaluacionbutton" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/L2"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp"
                                    app:srcCompat="@drawable/temasfondolinea" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/Topic2"
                                        android:layout_width="290dp"
                                        android:paddingTop="40dp"
                                        android:paddingLeft="40dp"
                                        android:layout_height="wrap_content"
                                        android:onClick="salir"
                                        app:srcCompat="@drawable/tema2text" /> />

                                    <ImageView
                                        android:id="@+id/test2"
                                        android:layout_width="100dp"
                                        android:layout_height="140dp"
                                        android:onClick="salir"
                                        android:paddingTop="70dp"
                                        app:srcCompat="@drawable/evaluacionbutton" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/L3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/L2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/Topic3"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:onClick="salir"
                                android:text="Offline Testing of AI Systems" />

                            <ImageView
                                android:id="@+id/test3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:onClick="salir"
                                app:srcCompat="@drawable/test" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/L4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/L3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/Topic4"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:onClick="salir"
                                android:text="Online Testing of AI Systems" />

                            <ImageView
                                android:id="@+id/test4"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:onClick="salir"
                                app:srcCompat="@drawable/test" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/L5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/L4"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/Topic5"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:onClick="salir"
                                android:text="Explainable AI" />

                            <ImageView
                                android:id="@+id/test5"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:onClick="salir"
                                app:srcCompat="@drawable/test" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/L6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/L5"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/Topic6"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:onClick="salir"
                                android:text="Risk and Test Strategy for AI Systems" />

                            <ImageView
                                android:id="@+id/test6"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:onClick="salir"
                                app:srcCompat="@drawable/test" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/L7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/L6"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/Topic7"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:onClick="salir"
                                android:text="AI Testing" />

                            <ImageView
                                android:id="@+id/test7"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:onClick="salir"
                                app:srcCompat="@drawable/test" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/TemaX"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/L7"
                            android:layout_centerHorizontal="true"
                            android:onClick="salir"
                            android:text="Random Quiz" />

                        <ImageView
                            android:id="@+id/quit"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@+id/TemaX"
                            android:layout_centerHorizontal="true"
                            android:onClick="quit"
                            android:paddingTop="20dp"
                            app:srcCompat="@drawable/salida" />


                    </LinearLayout>





                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/randomquiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="salir"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:srcCompat="@drawable/randomquizbtn"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>