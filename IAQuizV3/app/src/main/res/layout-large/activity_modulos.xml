<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModulosActivity"
    android:background="@drawable/fondo2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="70dp">


            <ImageView
                android:id="@+id/topicsimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:srcCompat="@drawable/topicslabel" />

            <TextView
                android:id="@+id/topics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="TOPICS"
                android:textAlignment="center"
                android:textColor="#0B0A0A"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="false"
                android:onClick="salir"
                android:paddingLeft="10dp"
                app:srcCompat="@drawable/regresar" />

        </RelativeLayout>


        <ScrollView
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1400dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/L1"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:layout_centerHorizontal="true">

                                <ImageView
                                    android:id="@+id/Topic1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="115dp"
                                    android:layout_centerHorizontal="true"
                                    android:onClick="salir"
                                    app:srcCompat="@drawable/botontopic1" />

                                <ImageView
                                    android:id="@+id/test1"
                                    android:layout_width="245dp"
                                    android:layout_height="100dp"
                                    android:layout_alignParentRight="true"
                                    android:onClick="salir"
                                    android:paddingTop="20dp"
                                    app:srcCompat="@drawable/evaluacionbutton" />


                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/L2"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:layout_centerHorizontal="true">

                                <ImageView
                                    android:id="@+id/Topic2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="115dp"
                                    android:layout_centerHorizontal="true"
                                    android:onClick="salir"
                                    app:srcCompat="@drawable/botontopic2" />

                                <ImageView
                                    android:id="@+id/test2"
                                    android:layout_width="245dp"
                                    android:layout_height="100dp"
                                    android:layout_alignParentRight="true"
                                    android:onClick="salir"
                                    android:paddingTop="20dp"
                                    app:srcCompat="@drawable/evaluacionbutton" />


                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/L3"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:layout_centerHorizontal="true">

                                <ImageView
                                    android:id="@+id/Topic3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="115dp"
                                    android:layout_centerHorizontal="true"
                                    android:onClick="salir"
                                    app:srcCompat="@drawable/botontopic3" />

                                <ImageView
                                    android:id="@+id/test3"
                                    android:layout_width="245dp"
                                    android:layout_height="100dp"
                                    android:layout_alignParentRight="true"
                                    android:onClick="salir"
                                    android:paddingTop="20dp"
                                    app:srcCompat="@drawable/evaluacionbutton" />


                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/L4"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:layout_centerHorizontal="true">

                                <ImageView
                                    android:id="@+id/test4"
                                    android:layout_width="245dp"
                                    android:layout_height="100dp"
                                    android:layout_alignParentRight="true"
                                    android:onClick="salir"
                                    android:paddingTop="20dp"
                                    app:srcCompat="@drawable/evaluacionbutton" />

                                <ImageView
                                    android:id="@+id/Topic4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="115dp"
                                    android:layout_centerHorizontal="true"
                                    android:onClick="salir"
                                    app:srcCompat="@drawable/botontopic4" />

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/L5"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:layout_centerHorizontal="true">

                                <ImageView
                                    android:id="@+id/Topic5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="115dp"
                                    android:layout_centerHorizontal="true"
                                    android:onClick="salir"
                                    app:srcCompat="@drawable/botontopic5" />

                                <ImageView
                                    android:id="@+id/test5"
                                    android:layout_width="245dp"
                                    android:layout_height="100dp"
                                    android:layout_alignParentRight="true"
                                    android:onClick="salir"
                                    android:paddingTop="20dp"
                                    app:srcCompat="@drawable/evaluacionbutton" />

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/L6"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:layout_centerHorizontal="true">

                                <ImageView
                                    android:id="@+id/Topic6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="115dp"
                                    android:layout_centerHorizontal="true"
                                    android:onClick="salir"
                                    app:srcCompat="@drawable/botontopic6" />

                                <ImageView
                                    android:id="@+id/test6"
                                    android:layout_width="245dp"
                                    android:layout_height="100dp"
                                    android:layout_alignParentRight="true"
                                    android:onClick="salir"
                                    android:paddingTop="20dp"
                                    app:srcCompat="@drawable/evaluacionbutton" />

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/L7"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:layout_centerHorizontal="true">

                                <ImageView
                                    android:id="@+id/Topic7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="115dp"
                                    android:layout_centerHorizontal="true"
                                    android:onClick="salir"
                                    app:srcCompat="@drawable/botontopic7" />

                                <ImageView
                                    android:id="@+id/test7"
                                    android:layout_width="245dp"
                                    android:layout_height="100dp"
                                    android:layout_alignParentRight="true"
                                    android:onClick="salir"
                                    android:paddingTop="20dp"
                                    app:srcCompat="@drawable/evaluacionbutton" />

                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/randomquiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="salir"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:srcCompat="@drawable/randomquizbtn"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>